<div class="login-container">
    <div class="card">
        <h2>Login</h2>
        <form id="loginForm" method="POST" action="/login">
            <div class="input-group">
                <label>Email or Phone</label>
                <input type="text" name="emailOrPhone" required>
            </div>
            <div class="input-group">
                <label>Password</label>
                <input type="password" name="password" id="login-password" required>
                <span class="toggle-password" onclick="togglePassword('login-password')"></span>
            </div>
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account? <a href="/register" style="color: black; font-weight: bolder;">Register</a></p>
    </div>
</div>

