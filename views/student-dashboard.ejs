<script>
    const fullName = "<%= user.name %>";
    const nameSpan = document.getElementById('typedName');
    let index = 0;
    let isDeleting = false;
  
    function typeEffect() {
      const speed = isDeleting ? 100 : 150;
      nameSpan.textContent = fullName.substring(0, index);
  
      if (!isDeleting && index < fullName.length) {
        index++;
      } else if (isDeleting && index > 0) {
        index--;
      } else {
        isDeleting = !isDeleting;
      }
  
      setTimeout(typeEffect, speed);
    }
  
    typeEffect();



    // for hamburger menu
    function toggleMenu() {
    const navLinks = document.getElementById('nav-links');
    navLinks.classList.toggle('active');
  }


  // for success story

  const stories = [
    {
      image: '/images/student1.jpg',
      name: 'Alice Johnson',
      rank: 'AIR 10',
      exam: 'NEET',
      year: '2022',
      desc: 'Completed NEET with exceptional rank using our resources.',
    },
    {
      image: '/images/student2.jpg',
      name: 'Rahul Mehta',
      rank: 'AIR 5',
      exam: 'JEE Main',
      year: '2023',
      desc: 'Library environment really helped me stay focused.',
    },
    {
      image: '/images/student3.jpg',
      name: 'Sneha Patel',
      rank: '1st Rank',
      exam: 'SSC Board',
      year: '2021',
      desc: 'Thanks to the library for all the support and peaceful environment.',
    }
  ];

  let current = 0;
  function showStory(index) {
    const story = stories[index];
    document.getElementById('studentImage').src = story.image;
    document.getElementById('studentName').textContent = story.name;
    document.getElementById('studentRank').textContent = story.rank;
    document.getElementById('studentExam').textContent = story.exam;
    document.getElementById('studentYear').textContent = story.year;
    document.getElementById('studentDesc').textContent = story.desc;
  }

  setInterval(() => {
    current = (current + 1) % stories.length;
    showStory(current);
  }, 7000); // Rotate every 7 seconds

  showStory(current); // Initial load
</script>
  
