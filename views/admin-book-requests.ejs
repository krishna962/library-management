<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Book Requests</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      background-color: #f9fafb;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: linear-gradient(to right, #2196F3, #1565C0);
      color: white;
      padding: 15px 30px;
      font-size: 18px;
    }

    .navbar-left {
      font-weight: bold;
    }

    .navbar-right a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    .navbar-right a:hover {
      color: #f1c40f;
    }

    h2 {
      text-align: center;
      color: #34495e;
      margin-top: 30px;
    }

    .controls {
      width: 90%;
      margin: 20px auto 0;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 10px;
    }

    .controls input, .controls select {
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 8px;
      width: 48%;
    }

    table {
      width: 90%;
      margin: 30px auto;
      border-collapse: collapse;
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 16px;
      text-align: center;
      border-bottom: 1px solid #ecf0f1;
      transition: background-color 0.3s ease;
    }

    th {
      background-color: #2980b9;
      color: white;
      font-weight: bold;
    }

    tr:hover {
      background-color: #f1f9ff;
      transform: scale(1.01);
    }

    button {
      padding: 8px 12px;
      margin: 4px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: transform 0.2s;
    }

    button[type="submit"] {
      background-color: #27ae60;
      color: white;
    }

    button[type="submit"]:last-child {
      background-color: #e74c3c;
    }

    button:hover {
      transform: scale(1.05);
    }

    span {
      font-weight: bold;
      text-transform: capitalize;
      color: #7f8c8d;
    }

    footer {
      background: linear-gradient(to right, #2196F3, #1565C0);
      color: white;
      text-align: center;
      padding: 15px;
      margin-top: 50px;
    }

    @media (max-width: 768px) {
      .controls input, .controls select {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <!-- ‚úÖ Navbar -->
  <div class="navbar">
    <div class="navbar-left">üìö Admin Panel - Book Requests</div>
    <div class="navbar-right">
      <a href="/admin-dashboard">üè† Dashboard</a>
    </div>
  </div>

  <!-- üîé Page Title -->
  <h2>üìñ Book Issue Requests</h2>

  <!-- üîç Search and Filter -->
  <div class="controls">
    <input type="text" id="searchInput" placeholder="Search by student or book name...">
    <select id="statusFilter">
      <option value="">Filter by Status</option>
      <option value="pending">Pending</option>
      <option value="approved">Approved</option>
      <option value="rejected">Rejected</option>
    </select>
  </div>

  <!-- üìã Request Table -->
  <table id="requestTable">
    <thead>
      <tr>
        <th>Book</th>
        <th>Student</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% requests.forEach(req => { %>
      <tr>
        <td><%= req.bookId.title %></td>
        <td><%= req.studentId.name %> (<%= req.studentId.class %>)</td>
        <td><%= req.status %></td>
        <td>
          <% if (req.status === "pending") { %>
            <form method="POST" action="/admin-dashboard/book-requests/<%= req._id %>/approved" style="display:inline;">
              <button type="submit">‚úÖ Approve</button>
            </form>
            <form method="POST" action="/admin-dashboard/book-requests/<%= req._id %>/rejected" style="display:inline;">
              <button type="submit">‚ùå Reject</button>
            </form>
          <% } else { %>
            <span><%= req.status %></span>
          <% } %>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

  <!-- ‚úÖ Footer -->
  <footer>
    &copy; <%= new Date().getFullYear() %> Library Management System | Admin Panel
  </footer>

  <!-- üîÑ Filter/Search Logic -->
  <script>
    const searchInput = document.getElementById('searchInput');
    const statusFilter = document.getElementById('statusFilter');
    const rows = document.querySelectorAll('#requestTable tbody tr');

    function filterTable() {
      const search = searchInput.value.toLowerCase();
      const status = statusFilter.value;

      rows.forEach(row => {
        const book = row.children[0].textContent.toLowerCase();
        const student = row.children[1].textContent.toLowerCase();
        const rowStatus = row.children[2].textContent.toLowerCase();

        const matchesSearch = book.includes(search) || student.includes(search);
        const matchesStatus = !status || rowStatus === status;

        row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
      });
    }

    searchInput.addEventListener('input', filterTable);
    statusFilter.addEventListener('change', filterTable);
  </script>

</body>
</html>
